<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_yellow"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/banner"
        android:layout_width="388dp"
        android:layout_height="53dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/black">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="35dp"
            android:layout_height="31dp"
            app:srcCompat="@drawable/cube" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="140dp"
            android:layout_height="31dp"
            android:layout_marginLeft="40dp"
            android:fontFamily="@font/yellowboxfont"
            android:gravity="center_vertical"
            android:text="yellow box"
            android:textColor="@color/white"
            android:textSize="24sp" />

    </FrameLayout>

    <Button
        android:id="@+id/btn_add_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="false"
        android:layout_alignParentBottom="true"
        android:text="create" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/room_name_edittext"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="@color/black"
        android:hint="a new chat room...?"
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="598dp"
        android:layout_alignBottom="@id/room_name_edittext"
        android:layout_alignParentEnd="false"
        android:layout_marginBottom="54dp">

        <LinearLayout
            android:id="@+id/linearScroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

</RelativeLayout>